<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:controls="clr-namespace:SnowyRiver.Accounts.Modules.Manager.Controls" >
    <Style TargetType="TextBox" BasedOn="{StaticResource MahApps.Styles.TextBox}">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="PasswordBox" BasedOn="{StaticResource MahApps.Styles.PasswordBox.Win8}">
    </Style>
    <Style TargetType="controls:PasswordInput" >
        <Setter Property="TextWidth" Value="64"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Margin" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="controls:TextInput">
        <Setter Property="TextWidth" Value="64"/>
        <Setter Property="Margin" Value="16"/>
        <Setter Property="FontSize" Value="24"/>
    </Style>
    <Style TargetType="controls:ListInput">
        <Setter Property="Margin" Value="16"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="HeaderHeight" Value="64"/>
    </Style>
</ResourceDictionary>