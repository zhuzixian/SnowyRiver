                                                <Setter  Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style x:Key="ScopeAllTextBlock" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
