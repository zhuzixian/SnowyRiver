                <DataGridCheckBoxColumn Header="{lex:Loc Acquire Image}" Binding="{Binding EnableTakePhoto}"/>
                <DataGridCheckBoxColumn Header="{lex:Loc Query Electrophoresis Records}" Binding="{Binding EnableViewEpRecords}"/>
