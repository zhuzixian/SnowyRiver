<UserControl x:Class="SnowyRiver.WPF.MaterialDesignInPrism.Controls.TextFieldEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:controls="clr-namespace:SnowyRiver.WPF.MaterialDesignInPrism.Controls"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Header, RelativeSource={RelativeSource AncestorType=controls:TextFieldEditor}}"
                   Width="{Binding HeaderWidth, RelativeSource={RelativeSource AncestorType=controls:TextFieldEditor}}"
                   VerticalAlignment="Center"
                   FontWeight="Bold"/>
        <TextBox Grid.Column="1" 
                 Text="{Binding Value, 
                        RelativeSource={RelativeSource AncestorType=controls:TextFieldEditor},
                        UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource MahApps.Styles.TextBox}"
                 Margin="6, 0"
                 VerticalContentAlignment="Center"/>
        <TextBlock Grid.Column="2" Text="{Binding Unit, RelativeSource={RelativeSource AncestorType=controls:TextFieldEditor}}"
                   Width="{Binding UnitWidth, RelativeSource={RelativeSource AncestorType=controls:TextFieldEditor}}"
                   VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
