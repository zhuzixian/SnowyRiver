<Button x:Class="SnowyRiver.WPF.MaterialDesignInPrism.Controls.ToolBarIcoTextButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:SnowyRiver.WPF.MaterialDesignInPrism.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
    <StackPanel Orientation="Horizontal">
        <materialDesign:PackIcon Kind="{Binding Kind, RelativeSource={RelativeSource AncestorType=controls:ToolBarButton}}"/>
        <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=controls:ToolBarButton}}" Margin="6, 0, 0, 0"/>
    </StackPanel>
</Button>
